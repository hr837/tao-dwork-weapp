<!--components/basic/sms-code/sms-code.wxml-->
<view class="form-item">
  <input class="sms-input" type="number" maxlength="6" placeholder="短信验证码" value="{{value}}" bindinput="onInputValueChange" placeholder-style="color:#999; font-size: 30rpx;"></input>
  <button class="sms-button" bindtap="onSmsCode" disabled="{{disabled}}">{{smsTiming? smsNum+'秒':smsBtnText}}</button>
</view>